[alias]
    # --- Raccourcis basiques ---
    st     = status                 # Status court
    ci     = commit                     # Commit
    co     = checkout                   # Checkout
    br     = branch                     # Branches
    lg     = log --oneline --graph --decorate --all  # Log compact

    # --- Ajout de fichiers ---
    addu   = "!git ls-files --others --exclude-standard | xargs -r git add"
    addm   = "!git diff --name-only --diff-filter=M | xargs -I {} git add {}"  
    adda   = "!git diff --name-only --diff-filter=AM | xargs -I {} git add {}"  

    # --- Undo & Fixup ---
    undo   = reset --soft HEAD~1        # Annuler le dernier commit, garder les modifs
    amend  = commit --amend --no-edit   # Amender sans changer le message
    fixup = "!sh -c 'git commit --fixup=${1:-HEAD~1}' -"

    # --- Branch & Merge ---
    bclean = "!git branch --merged | grep -vE '(^\\*|main|master|develop)' | xargs -r git branch -d"
    bprune = "!git remote prune origin && git fetch -p"  

    # --- Log & Diff ---
    hist   = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    last   = log -1 HEAD
    d      = diff
    ds     = diff --staged

    # --- Rebase & Pull ---
    up     = "!git fetch origin -p && git rebase origin/$(git rev-parse --abbrev-ref HEAD)"
    pfu    = "!git pull --ff-only --update-head-ok"
